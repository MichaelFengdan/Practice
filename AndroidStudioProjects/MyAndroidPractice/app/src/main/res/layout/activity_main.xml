<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="textStr"
            type="String"/>
        <variable
            name="onClickListener"
            type="android.view.View.OnClickListener"/>
        <variable
            name="onClickUtil"
            type="com.example.myandroidpractice.OnClickUtil" />
        <import type="com.example.myandroidpractice.testuser.User"/>
        <variable
            name="user_first"
            type="User" />
        <import
            alias="user_second"
            type="com.example.myandroidpractice.User"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:text="@{user_first.name,default=11123}"
            tools:text="@{user_first.name,default=11123}"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:onClick="@{onClickListener}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            android:text="TextView11111111"
            android:background="@color/purple_200"
            android:textSize="18sp"
            android:onClick="@{onClickUtil::onClickWithMe}"
            android:layout_marginTop="10dp"
            tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="right"
            app:constraint_referenced_ids="textView1,textView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/barrier"
            android:textSize="18sp"
            android:text="TextView1" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>